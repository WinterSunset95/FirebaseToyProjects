{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": [
	  {
		  "target": "star_store",
		  "public": "star_store/dist",
		  "ignore": [
			  "firebase.json",
			  "**/.*",
			  "**/node_modules/**"
		  ],
		  "predeploy": [
			  "npm --prefix star_store run build"
		  ]
	  },
	  {
		  "target": "chat-um",
		  "public": "chat-um/.next",
		  "ignore": [
			  "firebase.json",
			  "**/.*",
			  "**/node_modules/**"
		  ],
		  "predeploy": [
			  "npm --prefix chat-um run build"
		  ]
	  },
	  {
		  "target": "expense-tracker",
		  "public": "expense-tracker/.next",
		  "ignore": [
			  "firebase.json",
			  "**/.*",
			  "**/node_modules/**"
		  ],
		  "predeploy": [
			  "npm --prefix expense-tracker run build"
		  ]
	  }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
